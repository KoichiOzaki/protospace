.container.user-new
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Register
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :username, placeholder: "Username", autofocus: true
            .user-image.col-md-2
              %button.btn.btn-primary Add image
              = f.file_field :avatar
          .user-email
            = f.email_field :email, placeholder: "E-mail"
          .user-password
            = f.password_field :password, autocomplete: "off",  placeholder: "Password: #{@minimum_password_length} characters minimum"
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :member, placeholder: "Member"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, placeholder: "Profile", size: "30x4"
          %h4 Works 
          .user-name_image.row
            .user-name.col-md-12
              = f.text_area :works, placeholder: "Works", size: "30x4"
      .row.text-center.user-btn
        %button.btn.btn-lg.btn-primary.btn-block{ type: "submit" } Save

